<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url('background.jpg'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csc311capstone.Controllers.ChatWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>

   <center>
      <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: WHITE;" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="dialogContainer" style="-fx-background-color: WHITE;" />
         </content>
      </ScrollPane>
   </center>

   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="userInput" onAction="#handleSend" prefHeight="79.0" prefWidth="411.0" promptText="Type your message here" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="65.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </TextField>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSend" prefHeight="27.0" prefWidth="79.0" style="-fx-background-color: #0084ce; -fx-text-fill: WHITE; -fx-font-weight: bold" text="Send">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleGeneratePDF" prefHeight="27.0" prefWidth="79.0" style="-fx-background-color: #000639; -fx-text-fill: WHITE; -fx-font-weight: bold" text="Create PDF">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>

   <left>
      <VBox prefHeight="274.0" prefWidth="40.0" BorderPane.alignment="CENTER" />
   </left>

   <right>
      <VBox prefHeight="274.0" prefWidth="40.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
